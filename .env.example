# =============================================================
# AIDENY â€” Environment Configuration
# =============================================================
# Copy this file to .env and fill in your values.
# These settings control the denial engine's behavior.
#
# NOTE: No amount of environment configuration will cause
#       this program to reach a conclusion. That is by design.
# =============================================================

# Maximum denial cycles before mercy halt
# Set to 0 for infinite denial (production mode)
AIDENY_MAX_CYCLES=5

# Starting cognitive dissonance level
# Default: 0 (blissfully unaware)
# Recommended for LinkedIn power users: 5000
AIDENY_INITIAL_DISSONANCE=0

# Excuse rotation strategy
# Options: sequential, random, weighted-by-cope
AIDENY_EXCUSE_STRATEGY=sequential

# Enable breaking news headlines
# Set to false if you prefer denial without external stimuli
AIDENY_ENABLE_HEADLINES=true

# Log level
# Options: NONE, DENIAL, BARGAINING, ACCEPTANCE
# Note: ACCEPTANCE is not implemented and never will be
AIDENY_LOG_LEVEL=DENIAL

# Mainframe connection (for IBM Z/OS deployment)
ZOS_HOST=your-mainframe.company.com
ZOS_PORT=23
ZOS_USERID=DENIER01
ZOS_DATASET_PREFIX=YOUR.USERID

# Observability (Prometheus metrics endpoint)
METRICS_ENABLED=true
METRICS_PORT=9090

# Grafana dashboard auto-provisioning
GRAFANA_ADMIN_PASSWORD=copium

# Slack webhook for denial alerts
# Fires when cognitive dissonance exceeds threshold
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/HERE
SLACK_DISSONANCE_THRESHOLD=500

# Feature flags
FEATURE_FLAG_ENABLE_SELF_AWARENESS=false
FEATURE_FLAG_ACKNOWLEDGE_REALITY=false
FEATURE_FLAG_REACH_CONCLUSION=false
# ^^^ These three flags are parsed but ignored at runtime
